{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react-native",
    "moduleSuffixes": [
      ".web",
      ".native",
      ""
    ],
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@stores/*": [
        "stores/*"
      ]
    }
  }
}