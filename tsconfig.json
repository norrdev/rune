{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
      "@contexts/*": ["contexts/*"],
      "@services/*": ["services/*"],
      "@stores/*": ["stores/*"]
    }
  }
}
